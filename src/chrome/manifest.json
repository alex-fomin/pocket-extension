{
  // Required
  "manifest_version": 2,
  "name": "Add to Pocket",
  "version": "2.0.0",
  "icons": {
    "128": "images/logo-128.png",
    "48": "images/logo-48.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/notAdded-19.png",
      "38": "images/notAdded-38.png"
    },
    "default_title": "Add item to Pocket"
  },
  "permissions": [
    "tabs",
    "management",
    "contextMenus",
    "http://*/",
    "https://*/",
    "webNavigation"
  ],
  "browser_action": {
    "default_icon": "images/logo-19.png",
    "default_title": "Random article"
  }
}